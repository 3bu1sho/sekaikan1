<table class='table table-hover table-inverse'>
  </tbody>
    <% sekais.each.with_index(1) do |sekai, i| %>
      <tr>
        <div>
          <p>
        <td>
          第
          <%= i %>
          位
        </td>
        <span>
              <td class="favorite-btn">
                <%= render "favorites/favorite-btn", sekai: sekai %>
              </td>
            </span>
          </p>
          <td>
        世界の名:
        <%= link_to sekai.name, "/sekais/#{sekai.id}" %>
          </td>
          <td>
        <%= attachment_image_tag sekai, :image, format: 'jpeg', size: "100x100" %>
          </td>
        </div>
      </tr>
    <% end %>
</table>