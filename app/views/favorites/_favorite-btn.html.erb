<% if sekai.favorited_by?(current_user) %>
  <%= link_to sekai.favorites.count, sekai_favorites_path(sekai), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to sekai.favorites.count, sekai_favorites_path(sekai), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>